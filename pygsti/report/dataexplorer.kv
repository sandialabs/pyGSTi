            do_default_tab: False
            tab_width: None

            TabbedPanelItem:
                text: "+"
                size_hint_x: None
                width: self.texture_size[0] + 30
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    padding: (200, 200)                
                    StackLayout:
