                        FixedHeightButton:
                            text: "Blank Tab"
                            on_release: root.create_new_tab(new_tab_name.text, None)
                        

        #Right - hand sidebars
        StyledSplitter:  # Library of models, edesigns, and datasets (associated w/edesigns)
