            max_size: 1000

            BoxLayout:
                id: library_info_sidebar
                orientation: 'vertical'

                FixedHeightLabel:
                    text: "Library Item Info"
                    bgcolor: (0, 0.4, 0.6, 1)
    
                StackLayout:
                    id: library_info_area
    
        StyledSplitter:
