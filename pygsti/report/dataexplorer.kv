        StyledSplitter:
            id: figure_info_sidebar_splitter
            sizable_from: 'left'
            size_hint_x: None
            width: 500
            min_size: 0
            max_size: 1000
            
            BorderedBoxLayout:
                id: figure_info_sidebar
                orientation: 'vertical'

                FixedHeightLabel:
                    text: 'Information'
                    bgcolor: (0, 0.4, 0.6, 1)

                BoxLayout:
                    id: info_layout
                    orientation: 'vertical'
                    Label:
                        text: "Info goes here"

                BoxLayout:
                    size_hint_y: None
                    height: 40
                    Button:
                        text: "Open analysis..."
                        on_release: root.open_analysis()

                    Button:
                        text: "Save analysis..."
                        on_release: root.save_analysis()
 
#                TabbedPanel:
#                    do_default_tab: False
